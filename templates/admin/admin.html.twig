{% extends 'base.html.twig' %}

{% block title 'Administration' %}

{% block body %}
    <h2 class="text-center">Adminitrer</h2>
    <div class="jumbotron text-center">
        <div class="row">
            <div class="col-3">
                <div class="nav flex-column nav-pills " id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active btn-outline-danger" id="v-pills-home-tab" data-toggle="pill"
                       href="{{ path('activite') }}" role="tab" aria-controls="v-pills-home" aria-selected="true">Activités</a>
                    <a class="nav-link btn-outline-danger" id="v-pills-profile-tab" data-toggle="pill"
                       href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Expériences</a>
                    <a class="nav-link btn-outline-danger" id="v-pills-messages-tab" data-toggle="pill"
                       href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Formations</a>
                    <a class="nav-link btn-outline-danger" id="v-pills-settings-tab" data-toggle="pill"
                       href="#v-pills-settings" role="tab" aria-controls="v-pills-settings"
                       aria-selected="false">User</a>
                </div>
            </div>
            <div class="col-9">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel"
                         aria-labelledby="v-pills-home-tab">Bloque des activités, avec boutons créer qui renvoie au
                        formulaire d'ajout. + imbrication des formulaire expériences et formations
                    </div>
                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel"
                         aria-labelledby="v-pills-profile-tab">Bloque Tableau des expériences
                    </div>
                    <div class="tab-pane fade" id="v-pills-messages" role="tabpanel"
                         aria-labelledby="v-pills-messages-tab">Bloque tableau des formations
                    </div>
                    <div class="tab-pane fade" id="v-pills-settings" role="tabpanel"
                         aria-labelledby="v-pills-settings-tab">Bloque tableau des utilisateurs
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
